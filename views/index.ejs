<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <form method="GET" action="/">
  <label for="nameFilter">Filter by name</label>
  <input id="nameFilter" type="text" name="nameFilter">
  <input type="submit">
  </form>

<!-- pokemon is from the index.js that started from 
creating var pokemon = apiResponse.data.results -->
  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button href="/views/<%= pokemon.id%>" class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
